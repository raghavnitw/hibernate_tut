<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="StudentPOJO" table="STable">
    <id name="stNo" column="id"><!--mapping the variables to columns in db -->
      <generator class = "assigned"/><!-- autoincrements the id -->
    </id>
    <property name="stName" column="SName"/>
    <property name="stAddress"/><!-- if the column name is same as variable no need to specify column -->
  </class>
</hibernate-mapping>
